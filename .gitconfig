[http]
        sslverify = false
[user]
        email = nilesh.gavaskar@nokia.com
        name = Nilesh Gavaskar
[alias]
        st = status -sb
        rc = rebase --continue
        ra = rebase abort
        pr = pull --rebase
        lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
        lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%n'
        lg = !"git lg1"
        lg3 = log --graph --full-history --pretty=format:\"%h%x09%d%x20%s\"
        ci = commit
        co = checkout
        cl = clone
        rh1 = reset --hard HEAD^
	rh2 = reset --hard HEAD^^
        r = reset
[core]
	editor = vim
	excludesfile = /home/nilesh/.gitignore
